<Window x:Class="NetworkTrafficMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NetworkTrafficMonitor.ViewModels"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Network Traffic Monitor - Windows 11" 
        Height="800" Width="1400"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Default Button Style -->
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Card Style -->
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelAltBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PanelAltBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- DatePicker Style -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource PanelAltBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Network Traffic Monitor" 
                             FontSize="20" FontWeight="SemiBold"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusText}" 
                             Margin="20,0,0,0"
                             VerticalAlignment="Center"
                             Foreground="#00BCD4"
                             FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding StartCommand}" Content="Start" Background="{StaticResource SuccessBrush}"/>
                    <Button Command="{Binding StopCommand}" Content="Stop" Background="{StaticResource ErrorBrush}"/>
                    <Button Command="{Binding ClearCommand}" Content="Clear" Style="{StaticResource SecondaryButton}"/>
                    <Button Click="DebugButton_Click" Content="Debug" Background="{StaticResource WarningBrush}"/>
                    <Button Click="AboutButton_Click" Content="About" Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="Transparent">
            
            <!-- Outbound Tab -->
            <TabItem Header="Outbound Traffic">
                <Border Style="{StaticResource CardStyle}" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filter Panel -->
                        <Border Grid.Row="0" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Protocol:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Column="1" 
                                        ItemsSource="{Binding ProtocolFilters}"
                                        SelectedItem="{Binding SelectedProtocol}"
                                        Background="#2D2D30" Foreground="White" BorderBrush="#555"/>

                                <TextBlock Grid.Column="3" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="4" 
                                       Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Background="#2D2D30" Foreground="White" BorderBrush="#555"
                                       Padding="5"
                                       ToolTip="Search by process, IP, port, description, or state"/>
                            </Grid>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0" ItemsSource="{Binding OutboundConnections}"
                                SelectedItem="{Binding SelectedConnection}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                IsReadOnly="True"
                                SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="120"/>
                                <DataGridTextColumn Header="PID" Binding="{Binding ProcessId}" Width="60"/>
                                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="70"/>
                                <DataGridTextColumn Header="Local IP" Binding="{Binding LocalAddress}" Width="120"/>
                                <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="80"/>
                                <DataGridTextColumn Header="Remote IP" Binding="{Binding RemoteAddress}" Width="120"/>
                                <DataGridTextColumn Header="Remote Port" Binding="{Binding RemotePort}" Width="90"/>
                                <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="150"/>
                                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="100"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                            <!-- Firewall Actions -->
                            <Border Grid.Row="1" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,10,0,0" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Selected Connection:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBlock>
                                            <Run Text="Remote IP: "/>
                                            <Run Text="{Binding SelectedConnection.RemoteAddress, Mode=OneWay, FallbackValue='None'}" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                            <Run Text="  |  Protocol: "/>
                                            <Run Text="{Binding SelectedConnection.Protocol, Mode=OneWay, FallbackValue='N/A'}" FontWeight="Bold"/>
                                            <Run Text="  |  Process: "/>
                                            <Run Text="{Binding SelectedConnection.ProcessName, Mode=OneWay, FallbackValue='N/A'}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Command="{Binding BlockIPCommand}" 
                                              Content="ðŸš« Block IP" 
                                              Background="{StaticResource ErrorBrush}" 
                                              Padding="15,5"
                                              ToolTip="Add Windows Firewall rule to block this IP"/>
                                        <Button Command="{Binding AllowIPCommand}" 
                                              Content="âœ… Allow IP" 
                                              Background="{StaticResource SuccessBrush}" 
                                              Padding="15,5"
                                              Margin="5,0,0,0"
                                              ToolTip="Add Windows Firewall rule to allow this IP"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Inbound Tab -->
            <TabItem Header="Inbound Traffic">
                <Border Style="{StaticResource CardStyle}" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filter Panel -->
                        <Border Grid.Row="0" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Protocol:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Column="1" 
                                        ItemsSource="{Binding ProtocolFilters}"
                                        SelectedItem="{Binding SelectedProtocol}"
                                        Background="#2D2D30" Foreground="White" BorderBrush="#555"/>

                                <TextBlock Grid.Column="3" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="4" 
                                       Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Background="#2D2D30" Foreground="White" BorderBrush="#555"
                                       Padding="5"
                                       ToolTip="Search by process, IP, port, description, or state"/>
                            </Grid>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0" ItemsSource="{Binding InboundConnections}"
                                SelectedItem="{Binding SelectedConnection}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                IsReadOnly="True"
                                SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="120"/>
                                <DataGridTextColumn Header="PID" Binding="{Binding ProcessId}" Width="60"/>
                                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="70"/>
                                <DataGridTextColumn Header="Local IP" Binding="{Binding LocalAddress}" Width="120"/>
                                <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="80"/>
                                <DataGridTextColumn Header="Remote IP" Binding="{Binding RemoteAddress}" Width="120"/>
                                <DataGridTextColumn Header="Remote Port" Binding="{Binding RemotePort}" Width="90"/>
                                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="100"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                            <!-- Firewall Actions -->
                            <Border Grid.Row="1" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,10,0,0" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Selected Connection:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBlock>
                                            <Run Text="Remote IP: "/>
                                            <Run Text="{Binding SelectedConnection.RemoteAddress, Mode=OneWay, FallbackValue='None'}" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                            <Run Text="  |  Protocol: "/>
                                            <Run Text="{Binding SelectedConnection.Protocol, Mode=OneWay, FallbackValue='N/A'}" FontWeight="Bold"/>
                                            <Run Text="  |  Process: "/>
                                            <Run Text="{Binding SelectedConnection.ProcessName, Mode=OneWay, FallbackValue='N/A'}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Command="{Binding BlockIPCommand}" 
                                              Content="ðŸš« Block IP" 
                                              Background="{StaticResource ErrorBrush}" 
                                              Padding="15,5"
                                              ToolTip="Add Windows Firewall rule to block this IP"/>
                                        <Button Command="{Binding AllowIPCommand}" 
                                              Content="âœ… Allow IP" 
                                              Background="{StaticResource SuccessBrush}" 
                                              Padding="15,5"
                                              Margin="5,0,0,0"
                                              ToolTip="Add Windows Firewall rule to allow this IP"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Process Traffic Tab -->
            <TabItem Header="Process Traffic">
                <Border Style="{StaticResource CardStyle}" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Filter Panel -->
                        <Border Grid.Row="0" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Search Process:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" 
                                       Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Background="#2D2D30" Foreground="White" BorderBrush="#555"
                                       Padding="5"
                                       ToolTip="Search by process name or PID"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,0,0">
                                    <Button Command="{Binding KillProcessCommand}" 
                                          Content="Close Process" 
                                          Background="{StaticResource WarningBrush}" 
                                          Padding="15,5"
                                          ToolTip="Gracefully close the selected process"/>
                                    <Button Command="{Binding KillProcessForceCommand}" 
                                          Content="Force Kill" 
                                          Background="{StaticResource ErrorBrush}" 
                                          Padding="15,5"
                                          Margin="5,0,0,0"
                                          ToolTip="Forcefully terminate using taskkill"/>
                                    <Button Command="{Binding SuperKillCommand}" 
                                          Content="ðŸ”¥ Super Kill" 
                                          Background="#9C27B0" 
                                          Padding="15,5"
                                          Margin="5,0,0,0"
                                          ToolTip="EXTREME: Multiple kill methods (taskkill + wmic)"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="1" 
                                ItemsSource="{Binding ProcessTraffics}"
                                SelectedItem="{Binding SelectedProcess}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Process Name" Binding="{Binding ProcessName}" Width="200"/>
                            <DataGridTextColumn Header="PID" Binding="{Binding ProcessId}" Width="80"/>
                            <DataGridTextColumn Header="Connections" Binding="{Binding ConnectionCount}" Width="120"/>
                            <DataGridTextColumn Header="Bytes Sent" Binding="{Binding BytesSentFormatted}" Width="120"/>
                            <DataGridTextColumn Header="Bytes Received" Binding="{Binding BytesReceivedFormatted}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                        <!-- Selected Process Info -->
                        <Border Grid.Row="2" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,10,0,0" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="Selected Process:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock>
                                    <Run Text="Process: "/>
                                    <Run Text="{Binding SelectedProcess.ProcessName, Mode=OneWay, FallbackValue='None'}" FontWeight="Bold"/>
                                    <Run Text="  |  PID: "/>
                                    <Run Text="{Binding SelectedProcess.ProcessId, Mode=OneWay, FallbackValue='N/A'}" FontWeight="Bold"/>
                                    <Run Text="  |  Connections: "/>
                                    <Run Text="{Binding SelectedProcess.ConnectionCount, Mode=OneWay, FallbackValue='0'}" FontWeight="Bold"/>
                                </TextBlock>
                                <TextBlock Text="âš ï¸ System processes are protected and cannot be killed" 
                                         Foreground="{StaticResource WarningBrush}" 
                                         FontSize="11" 
                                         Margin="0,5,0,0"
                                         Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Bandwidth Chart Tab -->
            <TabItem Header="Bandwidth Chart">
                <Border Style="{StaticResource CardStyle}" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Chart Info -->
                        <Border Grid.Row="0" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="Real-time Bandwidth Monitor" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock Text="Shows upload/download speed over the last 60 seconds" FontSize="12" Opacity="0.7"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Border Background="#32CD32" Width="20" Height="3" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Upload" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                    <Border Background="#00BFFF" Width="20" Height="3" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Download" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Chart -->
                        <lvc:CartesianChart Grid.Row="1"
                                          Series="{Binding ChartViewModel.Series}"
                                          XAxes="{Binding ChartViewModel.XAxes}"
                                          YAxes="{Binding ChartViewModel.YAxes}"
                                          Background="#2D2D30"
                                          LegendPosition="Hidden"/>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Packet Details Tab -->
            <TabItem Header="Packet Details">
                <Border Style="{StaticResource CardStyle}" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filter Panel -->
                        <Border Grid.Row="0" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="TCP Flags:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Column="1" 
                                        ItemsSource="{Binding PacketDetailViewModel.FlagFilters}"
                                        SelectedItem="{Binding PacketDetailViewModel.SelectedFlagFilter}"/>

                                <TextBlock Grid.Column="3" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="4" 
                                       Text="{Binding PacketDetailViewModel.FilterText, UpdateSourceTrigger=PropertyChanged}"
                                       ToolTip="Search by IP, protocol, or flags"/>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding PacketDetailViewModel.Packets}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                IsReadOnly="True"
                                SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=HH:mm:ss.fff}" Width="100"/>
                                <DataGridTextColumn Header="Source IP" Binding="{Binding SourceIP}" Width="120"/>
                                <DataGridTextColumn Header="Src Port" Binding="{Binding SourcePort}" Width="80"/>
                                <DataGridTextColumn Header="Dest IP" Binding="{Binding DestinationIP}" Width="120"/>
                                <DataGridTextColumn Header="Dst Port" Binding="{Binding DestinationPort}" Width="80"/>
                                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="70"/>
                                <DataGridTextColumn Header="TCP Flags" Binding="{Binding TCPFlags}" Width="150"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding FlagDescription}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- History Tab -->
            <TabItem Header="History">
                <Border Style="{StaticResource CardStyle}" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Database Stats -->
                        <Border Grid.Row="0" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Database Statistics" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Total Records: " Opacity="0.7"/>
                                        <TextBlock Text="{Binding HistoryViewModel.Stats.TotalRecords, StringFormat={}{0:N0}}" FontWeight="Bold" Margin="5,0,20,0"/>
                                        <TextBlock Text="Size: " Opacity="0.7"/>
                                        <TextBlock Text="{Binding HistoryViewModel.Stats.DatabaseSizeFormatted}" FontWeight="Bold" Margin="5,0,20,0"/>
                                        <TextBlock Text="Oldest: " Opacity="0.7"/>
                                        <TextBlock Text="{Binding HistoryViewModel.Stats.OldestRecord, StringFormat=yyyy-MM-dd HH:mm}" FontWeight="Bold"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Command="{Binding HistoryViewModel.RefreshStatsCommand}" Content="Refresh Stats" Margin="5"/>
                                    <Button Command="{Binding HistoryViewModel.CleanOldRecordsCommand}" Content="Clean Old (7d+)" Background="{StaticResource ErrorBrush}" Margin="5"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Time Range Selection -->
                        <Border Grid.Row="1" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Quick Time Range Buttons -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                    <TextBlock Text="Quick:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Command="{Binding HistoryViewModel.SetLast1HourCommand}" Content="Last 1h" Margin="2" Padding="10,5"/>
                                    <Button Command="{Binding HistoryViewModel.SetLast24HoursCommand}" Content="Last 24h" Margin="2" Padding="10,5"/>
                                    <Button Command="{Binding HistoryViewModel.SetLast7DaysCommand}" Content="Last 7d" Margin="2" Padding="10,5"/>
                                </StackPanel>

                                <!-- Custom Date Range -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                                    <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <DatePicker SelectedDate="{Binding HistoryViewModel.StartDate}" Width="120" Margin="0,0,10,0"/>
                                    <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <DatePicker SelectedDate="{Binding HistoryViewModel.EndDate}" Width="120"/>
                                </StackPanel>

                                <!-- Search -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox Text="{Binding HistoryViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                           Width="200" ToolTip="Search by process, IP, domain"/>
                                </StackPanel>

                                <!-- Load Button -->
                                <Button Grid.Column="3" Command="{Binding HistoryViewModel.LoadHistoryCommand}" 
                                      Content="Load History" Background="{StaticResource SuccessBrush}" Padding="15,5"/>
                            </Grid>
                        </Border>

                        <!-- History Data Grid -->
                        <DataGrid Grid.Row="2" ItemsSource="{Binding HistoryViewModel.HistoryConnections}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                IsReadOnly="True"
                                SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Time" Binding="{Binding FirstSeen, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="140"/>
                                <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="120"/>
                                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="70"/>
                                <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="80"/>
                                <DataGridTextColumn Header="Local IP" Binding="{Binding LocalAddress}" Width="120"/>
                                <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="80"/>
                                <DataGridTextColumn Header="Remote IP" Binding="{Binding RemoteAddress}" Width="120"/>
                                <DataGridTextColumn Header="Remote Port" Binding="{Binding RemotePort}" Width="90"/>
                                <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="150"/>
                                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="100"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Summary -->
                        <Border Grid.Row="3" Background="{StaticResource PanelAltBrush}" Padding="10" Margin="0,10,0,0" CornerRadius="4">
                            <TextBlock>
                                <Run Text="Showing "/>
                                <Run Text="{Binding HistoryViewModel.HistoryConnections.Count, Mode=OneWay}" FontWeight="Bold"/>
                                <Run Text=" records"/>
                            </TextBlock>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                         Text="Administrator privileges required for full network monitoring"
                         VerticalAlignment="Center"
                         Foreground="{StaticResource WarningBrush}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¤ " VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding OutboundConnections.Count}" 
                             Margin="0,0,5,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="connections" Margin="0,0,15,0" VerticalAlignment="Center" FontSize="11" Opacity="0.7"/>
                    
                    <TextBlock Text="ðŸ“¥ " VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding InboundConnections.Count}" 
                             Margin="0,0,5,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="connections" Margin="0,0,15,0" VerticalAlignment="Center" FontSize="11" Opacity="0.7"/>
                    
                    <TextBlock Text="â¬† " VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalBytesSent, StringFormat={}{0:N0}}" 
