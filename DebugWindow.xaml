<Window x:Class="NetworkTrafficMonitor.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Output" Height="400" Width="600"
        Background="#1E1E1E" Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Debug Output" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="DebugTextBox" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap"
                     Background="#2D2D30"
                     Foreground="White"
                     FontFamily="Consolas"
                     Padding="5"/>
        </ScrollViewer>
        
        <Button Grid.Row="2" Content="Clear" Click="ClearButton_Click" 
                Margin="0,10,0,0" Padding="10,5"
                Background="#2196F3" Foreground="White" BorderThickness="0"/>
    </Grid>
</Window>
